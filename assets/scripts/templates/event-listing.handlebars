{{#each events as |event|}}

   <!-- Developers, why are we using data-id and not just id? -->
   <div class="events" data-id="{{event.id}}">
     <h2>Title: {{event.title}}</h2>
     <p>Location: {{event.location}} Date: {{event.date}}</p>
     <p>Dresscode: {{event.dresscode}} Attendees: {{event.attendees}}</p>
     <button class="bton remove" type="button" name="button">Remove</button>
     <button class="bton update" type="button" name="button">Update</button>
   </div>

{{/each}}
